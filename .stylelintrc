{
	"extends": [
		"stylelint-config-standard"
	],
	"rules": {
		"custom-property-empty-line-before": [
			"always",
			{
				"except": [
					"after-custom-property",
					"first-nested"
				],
				"ignore": [
					"after-comment"
				]
			}
		],
		"hue-degree-notation": "number",
		"color-function-notation": "modern"
	}
}